{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
      }
    },
    "rolldice": {
      "command": "node",
      "args": [
        "/path/to/rolldice-mcp-server/index.js"
      ]
    },
    "bootcamp": {
      "command": "node",
      "args": [
        "/path/to/bootcamp-ai-agent-server/index.js"
      ]
    },
    "calendar": {
      "command": "node",
      "args": [
        "/path/to/calendar-booking-server/index.js"
      ]
    }
  }
}
